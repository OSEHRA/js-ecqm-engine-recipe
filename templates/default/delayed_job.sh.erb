#!/bin/bash
cd <%= @pophealth_path %>
. <%= @rvm_path %>/scripts/rvm
if [[ $1 -eq "start" || $1 -eq "restart" ]]; then
  RAILS_ENV=production script/delayed_job $1 -n1 --queue=calculate
  RAILS_ENV=production script/delayed_job $1 -n2 --queue=rollup
  RAILS_ENV=production script/delayed_job $1 -n2 --queue=import
elif [[ $1 -eq "stop" ]]; then
  RAILS_ENV=production script/delayed_job $1
else
  echo "$1 is not implemented."
fi